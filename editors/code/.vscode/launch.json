{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "solidity-analyzer: Extension Host (build)",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": ["--extensionDevelopmentPath=${workspaceFolder}", "--disable-extensions"],
            "outFiles": ["${workspaceFolder}/out/**/*.js"],
            "preLaunchTask": "bun: build",
            "sourceMaps": true
        }
    ]
}
