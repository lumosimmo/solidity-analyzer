{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "lib": ["ES2020"],
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "types": ["node", "vscode"],
        "skipLibCheck": true
    },
    "include": ["src", "tests"]
}
